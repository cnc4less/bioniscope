<android.support.v4.widget.SlidingPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<fragment
        android:name="com.harryrickards.bioniscope.ControlsFragment"
        android:id="@+id/controlsFragment"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        tools:layout="@layout/controls_fragment"
    />-->
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/connectionStatus"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
        >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/controlsContainer"
            />
        </ScrollView>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connecting..."
        android:layout_above="@+id/moreInfoText"
        android:layout_alignParentRight="true"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:id="@+id/connectionStatus"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disconnect"
            android:layout_above="@+id/moreInfoText"
            android:layout_alignParentLeft="true"
            android:visibility="invisible"
            android:id="@+id/disconnectButton"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_info"
            android:layout_alignParentBottom="true"
            android:id="@+id/moreInfoText"
        />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:id="@+id/fragmentContainer"
        android:layout_weight="1"
    />
    
    <!--<fragment
        android:name="com.harryrickards.bioniscope.GraphFragment"
        android:id="@+id/graphFragment"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/graph_fragment"
    />-->
</android.support.v4.widget.SlidingPaneLayout>